<%- layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-4">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    No worries!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>   
                    <input class="form-control" type="text" name="campground[price]" id="price" placeholder="0" aria-label="Amount (to the nearest dollar)" required>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>
            <div class="form-file custom-file mb-3">
                <input type="file" class="form-file-input" name="image"id="image" multiple>
                <label class="form-file-label custom-file-label" for="image">
                    <span class="form-file-text">Choose files</span>
                    <span class="form-file-button">Browse</span>
                </label>  
            </div>
            <div class=" form-group mb-3">
                <button class="btn btn-primary">Add campground</button>
            </div>
        </form>
        <a href="/campgrounds">Show All CampGrounds</a>
    </div>  
</div>


   