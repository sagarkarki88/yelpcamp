<% layout('/layouts/boilerplate') %>
<div class="row mt-4">
    <div class="col-6 offset-4">
        <p>Are you sure you want to delete?</p>
        <div class="row">
            <div class="col-6 offset-1">
                <form action="/campgrounds/<%=campgrounds.id %>?_Method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Delete Now</button>
                </form>
            </div>
            <div class="col-6 offset-1 p-2 mt-3">
                <form action="/campgrounds" method="GET">
                    <button class="btn btn-danger" type="submit">Go Back</button>
                </form>
            </div>
          
        </div>
       
    </div>
   
</div>
   
